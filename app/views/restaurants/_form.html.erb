<%= form_for @restaurant do |f| %>
  <%= f.label :name, 'Please enter a name' %>
  <%= f.text_field :name %>
  <%= f.label :address, 'Please enter an address' %>
  <%= f.text_field :address %>
  <%= f.label :phone_number, 'Please enter a phone number' %>
  <%= f.text_field :phone_number %>
  <%= f.label :category, 'Please enter a category' %>
  <%= f.text_field :category %>
  <%= f.submit %>
<% end %>
