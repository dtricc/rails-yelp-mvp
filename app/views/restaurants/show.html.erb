<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><% @restaurant.reviews.each do |review| %></p>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>
<br>
<%= link_to 'Delete this', restaurant_path(@restaurant.id), method: :delete %>


<%= link_to 'add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to 'back to restaurants', restaurants_path, class: "btn btn-primary" %>


